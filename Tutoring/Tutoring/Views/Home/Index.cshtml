@model Tutoring.Models.HomeIndexViewModel;

@{
    ViewData["Title"] = "Home Page";
}

<div class="text-center">
    <h1 class="display-2">Welcome</h1>
    <h2>to Tutoring</h2>
</div>
<div class="row flex-column m-1 my-5 bg-primary bg-gradient rounded justify-content-center">
    <h4 class="col-2 align-self-center text-center py-3">Tutorings</h4>

    @if (Context.User.Identity.IsAuthenticated)
    {
        <a class="col-2 align-self-center btn btn-sm btn-info text-dark" asp-controller="Tutoring" asp-action="Add">New Tutoring</a>
    }
    <div class="col justify-content-center mx-1 my-3">
        <div class="list-group rounded">
            @for (int i = 0; i < Model.Tutorings.Count; i++)
            {
                var tutoring = Model.Tutorings.ElementAt(i);
                <a asp-action="Index" asp-controller="Tutoring" asp-route-id="@tutoring.Id" class="list-group-item list-group-item-action list-group-item-primary text-center">
                    <div class="row">
                        <div class="col-1">@($"{i+1}.")</div>
                        <div class="col-3">@tutoring.Title</div>
                        <div class="col-5 text-truncate">@tutoring.Description</div>
                        <div class="col-3">@tutoring.Author.Fullname</div>
                    </div>
                </a>
            }
        </div>
    </div>
</div>
