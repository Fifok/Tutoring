    <h4 class="row justify-content-center py-3">Tutorials</h4>
    @if (Context.User.Identity.IsAuthenticated)
    {
        <a class="btn btn-sm btn-primary mx-auto" asp-controller="Tutorial" asp-action="Add">New Tutorial</a>
    }
