@model ContentItemViewModel
<input type="hidden" asp-for="Id" />
<div class="form-group">
    <label asp-for="ContentType" class="control-label"></label>
    <select id="#typeSelect" asp-for="ContentType" asp-items="ViewBag.ContentTypes" class="form-control">
        <option value="">--Select type---</option>
    </select>
    <span asp-validation-for="ContentType" class="text-danger"></span>
</div>
<div class="form-group">
    <label asp-for="Content" class="control-label"></label>
    <textarea asp-for="Content" class="form-control"></textarea>
    <span asp-validation-for="Content" class="text-danger"></span>
</div>

